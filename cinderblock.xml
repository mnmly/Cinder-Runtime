<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="Cinder-Runtime"
	id="org.sg.cinder.runtime"
	author="Simon Geilfus"
	version="0.1"
	library="https://root.cern.ch/cling"
	>
	<supports os="macosx" />
	<requires>sg.watchdog</requires>
	
	<includePath>include</includePath>
	<includePath>lib/include</includePath>
	<header>include/runtime_ptr.h</header>
	<header>include/runtime_app.h</header>

	<platform config="debug">
  		<dynamicLibrary cinder="true">lib/macosx/Debug/libcinder_d.dylib</dynamicLibrary>
	</platform>
	<platform config="release">
  		<dynamicLibrary cinder="true">lib/macosx/Release/libcinder.dylib</dynamicLibrary>
	</platform>

	<dynamicLibrary>lib/lib/libCling.dylib</dynamicLibrary>
	<staticLibrary absolute="true">-lncurses</staticLibrary>

</block>
</cinder>
